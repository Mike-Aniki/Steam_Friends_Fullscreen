<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Header -->
    <sys:String x:Key="LOCSteamFriends_Title">Steam Friends Fullscreen</sys:String>
    <sys:String x:Key="LOCSteamFriends_Subtitle">Affiche le statut de tes amis Steam dans Playnite Fullscreen (le thème doit supporter le plugin).</sys:String>

    <!-- Setup -->
    <sys:String x:Key="LOCSteamFriends_Setup">Configuration</sys:String>
    <sys:String x:Key="LOCSteamFriends_ApiKey">Clé Steam Web API</sys:String>
    <sys:String x:Key="LOCSteamFriends_Profile">Ton profil Steam (lien ou ID)</sys:String>
    <sys:String x:Key="LOCSteamFriends_ProfileHelp">Colle le lien de ton profil Steam : https://steamcommunity.com/id/TonNom OU https://steamcommunity.com/profiles/76561...</sys:String>

    <!-- Display -->
    <sys:String x:Key="LOCSteamFriends_Display">Affichage</sys:String>
    <sys:String x:Key="LOCSteamFriends_OnlineInfo">Le plugin affiche jusqu’à 15 amis en ligne simultanément. Priorité : en jeu, puis en ligne, absent, occupé.</sys:String>
    <sys:String x:Key="LOCSteamFriends_ShowOffline">Afficher les amis hors ligne</sys:String>
    <sys:String x:Key="LOCSteamFriends_OfflineInfo">Les amis hors ligne sont optionnels et limités à 40 simultanément pour garantir de bonnes performances.</sys:String>

    <!-- Status -->
    <sys:String x:Key="LOCSteamFriends_Status">Statut</sys:String>
    <sys:String x:Key="LOCSteamFriends_Plugin">Plugin :</sys:String>
    <sys:String x:Key="LOCSteamFriends_Updated">Mis à jour :</sys:String>
    <sys:String x:Key="LOCSteamFriends_Error">Erreur :</sys:String>

    <sys:String x:Key="LOCSteamFriends_Notifications">Notifications</sys:String>
    <sys:String x:Key="LOCSteamFriends_EnableNotifications">Activer les notifications</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyOnGameStart">Notifier quand un ami lance un jeu (par défaut)</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyOnConnect">Notifier quand un ami se connecte</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotificationMode">Mode de notification</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotifyOff">Désactivé</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyPlayniteOnly">Playnite (Fullscreen uniquement)</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyWindowsOnly">Notifications Windows</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyBoth">Playnite + Windows</sys:String>
    <sys:String x:Key="LOCSteamFriends_TestNotification">Tester notification Windows</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotificationsHelp">Choisis où afficher les notifications. Les notifications Playnite s’affichent en mode Fullscreen (overlay du thème). Les notifications Windows apparaissent même si Playnite n’est pas au premier plan.</sys:String>

    <sys:String x:Key="LOCSteamFriendsToast_Online">{0} est maintenant {1}</sys:String>
    <sys:String x:Key="LOCSteamFriendsToast_GameStart">{0} a lancé {1}</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateOnline">En ligne</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateInGame">En jeu</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateAway">Absent</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateBusy">Occupé</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateOffline">Hors ligne</sys:String>

</ResourceDictionary>
