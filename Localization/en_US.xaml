<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Header -->
        <sys:String x:Key="LOCSteamFriends_Title">Steam Friends Fullscreen</sys:String>
        <sys:String x:Key="LOCSteamFriends_Subtitle">Show your Steam friends status inside Playnite Fullscreen (theme must support the plugin).</sys:String>

        <!-- Setup -->
        <sys:String x:Key="LOCSteamFriends_Setup">Setup</sys:String>
        <sys:String x:Key="LOCSteamFriends_ApiKey">Steam Web API Key</sys:String>
        <sys:String x:Key="LOCSteamFriends_Profile">Your Steam profile (link or ID)</sys:String>
        <sys:String x:Key="LOCSteamFriends_ProfileHelp">Paste your Steam profile link like: https://steamcommunity.com/id/YourName OR https://steamcommunity.com/profiles/76561...
        </sys:String>

        <!-- Display -->
        <sys:String x:Key="LOCSteamFriends_Display">Display</sys:String>
        <sys:String x:Key="LOCSteamFriends_OnlineInfo">The plugin displays up to 15 online friends at the same time. Friends are prioritized by status (in-game first, then online, away, busy).</sys:String>

        <sys:String x:Key="LOCSteamFriends_ShowOffline">Show offline friends</sys:String>

        <sys:String x:Key="LOCSteamFriends_OfflineInfo">Offline friends are optional and limited to 40 simultaneously. This limit ensures smooth performance.</sys:String>

        <!-- Status -->
        <sys:String x:Key="LOCSteamFriends_Status">Status</sys:String>
        <sys:String x:Key="LOCSteamFriends_Plugin">Plugin:</sys:String>
        <sys:String x:Key="LOCSteamFriends_Updated">Updated:</sys:String>
        <sys:String x:Key="LOCSteamFriends_Error">Error:</sys:String>

    <sys:String x:Key="LOCSteamFriends_Notifications">Notifications</sys:String>
    <sys:String x:Key="LOCSteamFriends_EnableNotifications">Enable notifications</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyOnGameStart">Notify when a friend starts a game (default)</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyOnConnect">Notify when a friend comes online</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotificationMode">Notification mode</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotifyOff">Off</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyPlayniteOnly">Playnite (Fullscreen only)</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyWindowsOnly">Windows notifications</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyBoth">Playnite + Windows</sys:String>
    <sys:String x:Key="LOCSteamFriends_TestNotification">Test Windows notification</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotificationsHelp">
        Choose where and how notifications are shown.
Playnite notifications appear only inside the Fullscreen theme.
Windows notifications use the system notification center and can appear in Desktop mode or during gameplay, as long as Playnite is running.
    </sys:String>



    <sys:String x:Key="LOCSteamFriendsToast_OnlineShort">is now {0}</sys:String>
    <sys:String x:Key="LOCSteamFriendsToast_GameStartShort">started playing {0}</sys:String>

    <sys:String x:Key="LOCSteamFriends_StateOnline">online</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateInGame">in game</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateAway">Away</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateBusy">Busy</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateOffline">Offline</sys:String>

    <sys:String x:Key="LOCSteamFriends_PrivacyNotice">IMPORTANT: Your Steam profile and your Friends List must be set to Public, otherwise the Steam Web API will return no data and the plugin will show outdated.</sys:String>



</ResourceDictionary>
