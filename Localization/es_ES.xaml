<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Header -->
    <sys:String x:Key="LOCSteamFriends_Title">Steam Friends Fullscreen</sys:String>
    <sys:String x:Key="LOCSteamFriends_Subtitle">
        Muestra el estado de tus amigos de Steam dentro de Playnite Fullscreen (el tema debe ser compatible con el plugin).
    </sys:String>

    <!-- Setup -->
    <sys:String x:Key="LOCSteamFriends_Setup">Configuración</sys:String>
    <sys:String x:Key="LOCSteamFriends_ApiKey">Clave de Steam Web API</sys:String>
    <sys:String x:Key="LOCSteamFriends_Profile">Tu perfil de Steam (enlace o ID)</sys:String>
    <sys:String x:Key="LOCSteamFriends_ProfileHelp">
        Pega el enlace de tu perfil de Steam, por ejemplo:
        https://steamcommunity.com/id/TuNombre
        o
        https://steamcommunity.com/profiles/76561...
    </sys:String>

    <!-- Display -->
    <sys:String x:Key="LOCSteamFriends_Display">Visualización</sys:String>
    <sys:String x:Key="LOCSteamFriends_OnlineInfo">
        El plugin muestra hasta 15 amigos en línea al mismo tiempo.
        Los amigos se priorizan por estado (jugando primero, luego en línea, ausente y ocupado).
    </sys:String>

    <sys:String x:Key="LOCSteamFriends_ShowOffline">Mostrar amigos desconectados</sys:String>

    <sys:String x:Key="LOCSteamFriends_OfflineInfo">
        Los amigos desconectados son opcionales y están limitados a 40 simultáneamente.
        Este límite garantiza un rendimiento fluido.
    </sys:String>

    <!-- Status -->
    <sys:String x:Key="LOCSteamFriends_Status">Estado</sys:String>
    <sys:String x:Key="LOCSteamFriends_Plugin">Plugin:</sys:String>
    <sys:String x:Key="LOCSteamFriends_Updated">Actualizado:</sys:String>
    <sys:String x:Key="LOCSteamFriends_Error">Error:</sys:String>

    <!-- Notifications -->
    <sys:String x:Key="LOCSteamFriends_Notifications">Notificaciones</sys:String>
    <sys:String x:Key="LOCSteamFriends_EnableNotifications">Activar notificaciones</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyOnGameStart">
        Notificar cuando un amigo empieza a jugar (predeterminado)
    </sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyOnConnect">
        Notificar cuando un amigo se conecta
    </sys:String>

    <sys:String x:Key="LOCSteamFriends_NotificationMode">Modo de notificación</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotifyOff">Desactivado</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyPlayniteOnly">Playnite (solo Fullscreen)</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyWindowsOnly">Notificaciones de Windows</sys:String>
    <sys:String x:Key="LOCSteamFriends_NotifyBoth">Playnite + Windows</sys:String>
    <sys:String x:Key="LOCSteamFriends_TestNotification">Probar notificación de Windows</sys:String>

    <sys:String x:Key="LOCSteamFriends_NotificationsHelp">
        Elige dónde y cómo se muestran las notificaciones.
        Las notificaciones de Playnite solo aparecen dentro del tema Fullscreen.
        Las notificaciones de Windows utilizan el centro de notificaciones del sistema y pueden aparecer en modo escritorio o durante el juego, siempre que Playnite esté en ejecución.
    </sys:String>

    <!-- Toasts (Windows) -->
    <sys:String x:Key="LOCSteamFriendsToast_OnlineShort">ahora está {0}</sys:String>
    <sys:String x:Key="LOCSteamFriendsToast_GameStartShort">empezó a jugar a {0}</sys:String>

    <!-- States (Windows) -->
    <sys:String x:Key="LOCSteamFriends_StateOnline">en línea</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateInGame">jugando</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateAway">ausente</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateBusy">ocupado</sys:String>
    <sys:String x:Key="LOCSteamFriends_StateOffline">desconectado</sys:String>

    <sys:String x:Key="LOCSteamFriends_PrivacyNotice">
        IMPORTANTE: Su perfil de Steam y su lista de amigos deben estar configurados como Públicos, de lo contrario la API de Steam no devolverá ningún dato y el plugin mostrará datos obsoletos.
    </sys:String>


</ResourceDictionary>
